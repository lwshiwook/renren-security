 * @date ${datetime}
 */
@RestController
@RequestMapping("/api/${pathName}")
@Api(tags = "${comments}相关", hidden = true, value="${comments}的增删改查")
public class ${className}Controller {

    @Autowired
    private ${className}Service ${classname}Service;

    /**
     * 列表
     */
    @PostMapping("/list")
    @ApiOperation(value = "${comments}列表", tags = "${comments}相关", produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
    public JsonResult<PageData<${className}>> list(@RequestBody QueryPage queryObj){
        //TODO 这里应该自己继承QueryPage实现一个查询条件的bean,替换上面一行中的QueryPage
        PageData<${className}> page = ${classname}Service.queryPage(queryObj);
        return JsonResult.ok(page);
    }


    /**
     * 信息
     */
    @GetMapping
    @ApiOperation(value = "${comments}详情", tags = "${comments}相关", produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
    public JsonResult<${className}> info(@RequestParam("${pk.attrname}") @ApiParam("id") ${pk.attrType} ${pk.attrname}){
        ${className} ${classname} = ${classname}Service.selectById(${pk.attrname});
        return JsonResult.ok(${classname});
    }

    /**
     * 保存
     */
    @PostMapping
    @ApiOperation(value = "新增${comments}信息", tags = "${comments}相关", produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
    public JsonResult<${className}> save(@RequestBody @Valid ${className} ${classname}){
        ${classname}Service.insertSelective(${classname});
        return JsonResult.ok(${classname});
    }

    /**
     * 修改
     */
    @PatchMapping
    @ApiOperation(value = "修改${comments}", tags = "${comments}相关",  notes = "逻辑删除请更新deleted字段为1", produces = MediaType.APPLICATION_JSON_UTF8_VALUE)
    public JsonResult<?> update(@RequestBody @Valid ${className} ${classname}){
        ${classname}Service.updateSelectiveById(${classname});
        return JsonResult.ok();
    }

}
